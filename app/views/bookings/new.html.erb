<h2>Book your deliveries</h2>


<%= form_tag({controller: "bookings", action: "create"}, method: "post")  do %>
 
 

<p>
  <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
     Enter Pick Up
  </a>
</p>

<div class="collapse" id="collapseExample">
  <div class="card card-body">
   
 
  <div class="form-group">
    <label class="control-label" for="pick_name"> Name </label>
    <input class="form-control" id="pick_name" type="text" value=<%= current_user.first_name.to_s.concat( current_user.last_name.to_s) %> placeholder="Enter Name">
  </div>

   <div class="form-group">
   		<label class="control-label" for="pick_address">Address</label>
     	<input type="text" class="form-control" id="pick_address" placeholder=" Please enter pickup address." required>
  </div>

 	<div class="form-group">
   		<label class="control-label" for="pick_phone">Number</label>
  		<input type="text" id="pick_phone "class="form-control" value=<%= current_user.contact_number %> placeholder="+1 (ddd) ddd-dddd" required>
	 </div>

 </div>
</div> <!-- end pick up collapse-->


<p>
  <a class="btn btn-primary" data-toggle="collapse" href="#dropCollapse" role="button" aria-expanded="true" aria-controls="dropCollapse">
     Enter Drop off 
  </a>
</p>


<div class="collapse" id="dropCollapse">
  <div class="card card-body">
 

  <div class="form-group">
    <label class="control-label" for="drop_name"> Name </label>
    <input class="form-control" id="drop_name" type="text" placeholder="Enter name of person to collect">
  </div>

   <div class="form-group">
   		<label class="control-label" for="drop_address">Address</label>
     	<input type="text" class="form-control" id="drop_address" placeholder=" Please enter drop off address." required>
  </div>

 	<div class="form-group">
   		<label class="control-label" for="drop_phone">Number </label>
  		<input type="text" id="drop_phone "class="form-control" placeholder="+1 (ddd) ddd-dddd" required>
	 </div>

	  </div>
</div> <!-- drop off collapse-->

	<div class="form-group">
    <label for="item_descript">Item description</label>
    <textarea class="form-control" id="item_descript" placeholder=" Clearly describe the items to be delivered"rows="5" required></textarea>
  </div>

  <div class="form-group">
    <label for="delivery_instruct">Delivery Instructions</label>
    <textarea class="form-control" id="delivery_instruct" placeholder=" "rows="5" required></textarea>
  </div>


  <%= submit_tag "Book", name: nil, class: "btn btn-default" %>  


<% end %>


